<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to '<i class="fas fa-home"></i>'.html_safe, root_path, class: 'breadcrumb-link' %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @post.title %></li>
  </ol>
</nav>

<h1><%= @post.title %></h1>
<small class="text-muted"><i class="far fa-clock"></i> <%= local_time(@post.created_at, :short) %></small>

<%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_post_path(@post), class: 'admin-controls', data: { toggle: 'tooltip', placement: 'bottom' }, title: 'Edit' %> | 
<%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'admin-controls', data: { toggle: 'tooltip', placement: 'bottom' }, title: 'Delete' %>

<br>

<% if @post.hero_image.attached? %>
  <div class="text-center">
    <figure>
      <img src="<%= url_for(@post.hero_image) %>" class="img-fluid" />
      <figcaption class="text-muted"><small><%= @post.caption %></small></figcaption>
    </figure>
  </div>
<% end %>

<br>

<div class="d-flex justify-content-center w-75 mx-auto">
  <%= @post.body %>
</div>
