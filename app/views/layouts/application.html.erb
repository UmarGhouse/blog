<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Font awesome -->
    <script src="https://kit.fontawesome.com/911a8d45ea.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-light fixed-top bg-light">
      <%= link_to 'Umar Ghouse', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'Podcast Notes', podcast_notes_path, class: 'nav-link' %>
          </li>
          <% if current_user %>
            <li class="nav-item">
              <%= link_to new_post_path, class: 'nav-link', data: { toggle: 'tooltip', placement: 'bottom' }, title: 'Add New Post' do %>
                <i class="fas fa-plus-circle"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= login_helper 'nav-link' %>
          </li>
        </ul>
      </div>
    </nav>

    <main role="main">
      <div class="container my-3">
        <div id="flash">
          <%= alerts(notice) %>
          <%= alerts(alert) %>
        </div>

        <%= form_with url: search_path, local: true, method: :get, html: { class: "my-2 my-lg-0 mx-auto" } do |form| %>
          <%= form.text_field :q, placeholder: "Search", data: { behavior: "autocomplete" }, class: "search form-control my-3 rounded-pill" %>
        <% end %>

        <%= yield %>
      </div>
    </main>

    <footer class="container">
      <hr>
      
      <p>&copy; Umar Ghouse <%= Date.today.year %></p>
    </footer>
  </body>
</html>
